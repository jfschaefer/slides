% GOAL: ENABLE CONSISTENT COLOR SCHEMES BY DEFINING CUSTOM COLORS

\RequirePackage{xcolor}


\providecommand\fgcolfac{50}
\providecommand\bgcolfac{25}
\providecommand\fontcolfac{60}

\newcommand\providecolorlet[2]{\@ifundefinedcolor{#1}{\colorlet{#1}{#2}}{}}

\newcommand\providecolorgroup[2]{
    \providecolorlet{#1base}{#2}
    \providecolorlet{#1fg}{#1base!\fgcolfac!black}
    \providecolorlet{#1bg}{#1base!\bgcolfac}
    \providecolorlet{#1font}{#1base!\fontcolfac!black}
}

\newcommand\definecolorgroup[2]{
    \colorlet{#1base}{#2}
    \colorlet{#1fg}{#1base!\fgcolfac!black}
    \colorlet{#1bg}{#1base!\bgcolfac}
    \colorlet{#1font}{#1base!\fontcolfac!black}
}

\colorlet{commentfont}{black!50}
\providecolorgroup{hl}{red}             % highlight
\providecolorgroup{nl}{green!80!black}  % natural language
\providecolorgroup{logic}{blue}         % logic

